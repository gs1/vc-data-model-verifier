{
  "$id": "GS1-Delegated-IDKey-Schema",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "version": "1.0.0",
  "title": "DelegatedGS1IdentificationKeyLicenseCredential",
  "description": "A delegated GS1 Identification Key License Credential for exceptional delegation cases. This credential allows special delegation scenarios for individual GS1 ID Key licensing.",
  "type": "object",
  "properties": {
    "@context": {
      "type": "array",
      "readOnly": true,
      "const": [
        "https://www.w3.org/ns/credentials/v2",
        "https://ref.gs1.org/gs1/vc/license-context"
      ],
      "default": [
        "https://www.w3.org/ns/credentials/v2",
        "https://ref.gs1.org/gs1/vc/license-context"
      ],
      "items": {
        "type": "string",
        "enum": [
          "https://www.w3.org/ns/credentials/v2",
          "https://ref.gs1.org/gs1/vc/license-context"
        ]
      }
    },
    "type": {
      "type": "array",
      "readOnly": true,
      "const": [
        "VerifiableCredential",
        "DelegatedGS1IdentificationKeyLicenseCredential"
      ],
      "default": [
        "VerifiableCredential",
        "DelegatedGS1IdentificationKeyLicenseCredential"
      ],
      "items": {
        "type": "string",
        "enum": [
          "VerifiableCredential",
          "DelegatedGS1IdentificationKeyLicenseCredential"
        ]
      }
    },
    "id": {
      "type": "string",
      "format": "uri"
    },
    "issuer": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "format": "uri"
        },
        "name": {
          "type": "string"
        }
      },
      "required": ["id", "name"],
      "additionalProperties": false
    },
    "validFrom": {
      "type": "string",
      "format": "date-time"
    },
    "name": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "credentialSubject": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "format": "uri"
        },
        "organization": {
          "type": "object",
          "properties": {
            "gs1:partyGLN": {
              "type": "string",
              "pattern": "^[0-9]{13}$"
            },
            "gs1:organizationName": {
              "type": "string"
            }
          },
          "required": ["gs1:partyGLN", "gs1:organizationName"],
          "additionalProperties": false
        },
        "extendsCredential": {
          "type": "string",
          "format": "uri"
        },
        "licenseValue": {
          "type": "string",
          "pattern": "^[0-9]+$"
        },
        "alternativeLicenseValue": {
          "type": "string",
          "pattern": "^[0-9]+$"
        },
        "identificationKeyType": {
          "type": "string",
          "enum": [
            "GTIN", "GLN", "SSCC", "GRAI", "GIAI", "GSRN", 
            "GDTI", "GINC", "GSIN", "GCN", "CPID", "GMN"
          ]
        }
      },
      "required": ["id", "organization", "extendsCredential", "licenseValue", "identificationKeyType"],
      "additionalProperties": false
    },
    "credentialSchema": {
      "type": "object",
      "properties": {
        "id": {
          "title": "Credential Schema Identifier",
          "type": "string",
          "format": "uri",
          "const": "https://id.gs1.org/vc/schema/v1/delegated-idkey"
        },
        "type": {
          "title": "Credential Schema Type",
          "const": "JsonSchema"
        }
      },
      "additionalProperties": false,
      "required": [
        "id",
        "type"
      ]
    },
    "credentialStatus": {
      "type": "object",
      "description": "Revocation supported.",
      "properties": {
        "id": {
          "title": "Credential Status",
          "type": "string",
          "format": "uri"
        },
        "type": {
          "type": "string",
          "const": "BitstringStatusListEntry"
        },
        "statusPurpose": {
          "type": "string",
          "const": "revocation"
        },
        "statusListIndex": {
          "type": "string"
        },
        "statusSize": {
          "type": "number"
        },
        "statusListCredential": {
          "type": "string",
          "format": "uri"
        }
      },
      "required": [
        "id",
        "type",
        "statusPurpose",
        "statusListIndex",
        "statusSize",
        "statusListCredential"
      ],
      "additionalProperties": false
    },
    "renderMethod": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uri"
          },
          "type": {
            "type": "string",
            "const": "SvgRenderingTemplate"
          },
          "name": {
            "type": "string"
          },
          "css3MediaQuery": {
            "type": "string"
          }
        },
        "required": ["id", "type", "name"],
        "additionalProperties": false
      }
    }
  },
  "required": [
    "@context",
    "type",
    "id",
    "issuer",
    "validFrom",
    "name",
    "description",
    "credentialSubject",
    "credentialSchema",
    "credentialStatus",
    "renderMethod"
  ],
  "additionalProperties": false
} 